/*---------------- Global Custom CSS -------------------*/
{{ settings.global_css }}

  .t4s-col-12.t4s-col-item.t4s-col-thumb.t4s-pr.t4s-oh {
    display: flex !important;
    
}
.t4s-header__wrapper.t4s-pr.t4s-header-layout_logo_left {
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.55) !important;
    z-index:1000 !important;
}

.img-fija { margin-top:10px;}
/*Ajusta los botones del slider mas abajo*/
.t4s-slider-btn-pos-ontop.t4s-flicky-slider:not(:hover) .flickityt4s-button.previous, .t4s-slider-btn-pos-ontop.t4s-flicky-slider:not(:hover) .flickityt4s-button.next {
   
    transform:none;
    transition:none !important;
    margin-bottom: -5rem !important;
    
}

/*---------------- Custom CSS for only desktop -------------------*/
@media (min-width: 1025px) {
  {{ settings.desktop_css }}

}

/*---------------- Custom CSS for tablet, mobile -------------------*/
@media (max-width: 1024px) {
  {{ settings.tablet_mobile_css }}
   .coll-right{
    flex-direction: column-reverse !important;
}
}

/*---------------- Custom CSS for only tablet -------------------*/
@media (min-width: 768px) and (max-width: 1024px) {
  {{ settings.tablet_css }}
}

/*---------------- Custom CSS for only mobile -------------------*/
@media (max-width: 767px){
  {{ settings.mobile_css }}

  .coll-right{
    flex-direction: column-reverse !important;
}
}