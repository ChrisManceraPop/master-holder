/*---------------- Global Custom CSS -------------------*/
{{ settings.global_css }}

  .t4s-col-12.t4s-col-item.t4s-col-thumb.t4s-pr.t4s-oh {
    display: flex !important;
    
}
.t4s-header__wrapper.t4s-pr.t4s-header-layout_logo_left {
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.55) !important;
  z-index:1000 !important;
}

.img-fija{
  margin-top:10px;


/*---------------- Custom CSS for only desktop -------------------*/
@media (min-width: 1025px) {
  {{ settings.desktop_css }}
.t4s-header__wrapper {
    --h-text-color: #222222;
    --h-text-color-rgb: 34, 34, 34;
    --h-text-color-hover: #56cfe1;
    --h-bg-color: rgba(255, 255, 255, 0.0);
    background-color: var(--h-bg-color);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) !important;
}
}

/*---------------- Custom CSS for tablet, mobile -------------------*/
@media (max-width: 1024px) {
  {{ settings.tablet_mobile_css }}
   .coll-right{
    flex-direction: column-reverse !important;
}
}

/*---------------- Custom CSS for only tablet -------------------*/
@media (min-width: 768px) and (max-width: 1024px) {
  {{ settings.tablet_css }}
}

/*---------------- Custom CSS for only mobile -------------------*/
@media (max-width: 767px){
  {{ settings.mobile_css }}

  .coll-right{
    flex-direction: column-reverse !important;
}
}