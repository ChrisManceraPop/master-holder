<style>
  .ba_main {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
    padding: 0 5rem;
    max-width: 1200px;
    width: 100%;
    margin: 50px auto;
  }

  .container {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    width: 50%;
    max-width: 600px;
    margin: 0 auto;
  }

  .image-container {
    position: relative;
    width: 100%;
    max-height: 500px;
  }

  .before_img,
  .after_img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .before_img {
    overflow: hidden;
    clip-path: inset(0 var(--position, 50%) 0 0);
  }

  .slider-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .before_badge,
  .after_badge {
    position: absolute;
    bottom: 15px;
    background: #fff;
    padding: 5px;
    border-radius: 5px;
    color: #000;
    font-weight: bold;
  }

  .before_badge {
    left: 15px;
  }

  .after_badge {
    right: 15px;
  }

  .ba-slider {
    position: absolute;
    inset: 0;
    cursor: pointer;
    opacity: 0;
    width: 100%;
    height: 100%;
  }

  .slider-line {
    position: absolute;
    width: 3px;
    height: 100%;
    background-color: #fff;
    left: var(--position, 50%);
    transform: translateX(-50%);
    pointer-events: none;
  }

  .slider-button {
    position: absolute;
    background-color: #ffffffb5;
    color: black;
    padding: 0.5rem;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 50%;
    left: var(--position, 50%);
    transform: translate(-50%, -50%);
    pointer-events: none;
    box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
    width: 30px;
    height: 30px;
  }

  @media only screen and (max-width: 768px) {
    .container {
      width: 100%;
    }
    .ba_main {
      padding: 0 20px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const container = document.querySelector(".before_after");
    const slider = document.querySelector(".ba-slider");

    slider.addEventListener("input", (e) => {
      const position = e.target.value + "%";
      container.style.setProperty("--position", position);
    });
  });
</script>
