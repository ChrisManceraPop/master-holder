<!-- Agregar Leaflet desde Shopify Assets -->
<link rel="stylesheet" href="{{ 'leaflet.css' | asset_url }}">
<script src="{{ 'leaflet.js' | asset_url }}" defer></script>

<style>
    /* Contenedor general */
    .contenedor {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
    }

    /* Buscador y lista */
    .buscador-container {
        width: 30%;
        min-width: 300px;
        max-height: 500px;
        overflow-y: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #fff;
    }

    #buscador {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        margin-bottom: 15px;
    }

    /* Lista de distribuidores */
    .lista-distribuidores {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .distribuidor {
        display: flex;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
        transition: background 0.2s;
        background: #fff;
        border-radius: 5px;
        margin-bottom: 5px;
    }

    .distribuidor:hover {
        background: #f9f9f9;
    }

    .distribuidor img {
        width: 60px;
        height: 60px;
        border-radius: 5px;
        margin-right: 10px;
    }

    .distribuidor .info {
        flex-grow: 1;
    }

    .distribuidor strong {
        display: block;
        font-size: 16px;
        margin-bottom: 3px;
    }

    .distribuidor span {
        display: block;
        font-size: 14px;
        color: #666;
    }

    /* Mapa */
    .map-container {
        flex-grow: 1;
        height: 500px;
        border-radius: 8px;
        position: relative;
    }

    #map {
        width: 100%;
        height: 100%;
        border-radius: 8px;
        background: #f3f3f3;
    }

    /* Mensaje de no resultados */
    .no-resultados {
        text-align: center;
        font-size: 16px;
        color: #666;
        padding: 20px;
        display: none;
    }

    /* Responsive */
    @media screen and (max-width: 768px) {
        .contenedor {
            flex-direction: column;
        }
        .buscador-container {
            width: 100%;
        }
        .map-container {
            height: 400px;
        }
    }
</style>

<div class="contenedor">
    <!-- Buscador y lista de distribuidores -->
    <div class="buscador-container">
        <input type="text" id="buscador" placeholder="Buscar distribuidores por ciudad..." onkeyup="filtrarDistribuidores()">
        <ul id="lista-distribuidores" class="lista-distribuidores">
            <p id="no-resultados" class="no-resultados">No hay distribuidores disponibles.</p>
            {% assign distribuidores = shop.metaobjects.distribuidor.values %}
            {% for distribuidor in distribuidores %}
                {% assign ciudad = distribuidor.ciudad | downcase %}
                <li class="distribuidor" 
                    data-ciudad="{{ ciudad }}" 
                    data-direccion="{{ distribuidor.direccion }}"
                    data-nombre="{{ distribuidor.nombre }}"
                    data-telefono="{{ distribuidor.telefono }}"
                    data-horario="{{ distribuidor.horario }}"
                    data-logo="{{ distribuidor.logo | image_url }}">
                    <img src="{{ distribuidor.logo | image_url }}" alt="{{ distribuidor.nombre }}">
                    <div class="info">
                        <strong>{{ distribuidor.nombre }}</strong>
                        <span><b>Ciudad:</b> {{ distribuidor.ciudad }}</span>
                        <span><b>Dirección:</b> {{ distribuidor.direccion }}</span>
                        <span><b>Teléfono:</b> {{ distribuidor.telefono }}</span>
                        <span><b>Horario:</b> {{ distribuidor.horario }}</span>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

    <!-- Mapa -->
    <div class="map-container">
        <div id="map"></div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() { 
            if (typeof L === 'undefined') {
                console.error("Leaflet.js no se ha cargado correctamente.");
                return;
            }

            var map = L.map('map').setView([19.4326, -99.1332], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            console.log("Mapa inicializado correctamente");

            var markers = {};
            var items = document.getElementsByClassName("distribuidor");

            function filtrarDistribuidores() {
                var filtro = document.getElementById("buscador").value.toLowerCase();
                console.log("Buscando:", filtro);

                var hayResultados = false;

                for (var i = 0; i < items.length; i++) {
                    var ciudad = items[i].getAttribute("data-ciudad");
                    var direccion = items[i].getAttribute("data-direccion");

                    if (ciudad.includes(filtro) || filtro === "") {
                        items[i].style.display = "block";
                        hayResultados = true;

                        if (!markers[direccion]) {
                            fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(direccion)}`)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.length > 0) {
                                        var lat = parseFloat(data[0].lat);
                                        var lng = parseFloat(data[0].lon);

                                        markers[direccion] = L.marker([lat, lng]).addTo(map)
                                            .bindPopup(`<b>${items[i].getAttribute("data-nombre")}</b><br>${direccion}`);
                                    }
                                });
                        }
                    } else {
                        items[i].style.display = "none";
                    }
                }

                document.getElementById("no-resultados").style.display = hayResultados ? "none" : "block";
            }

            document.querySelectorAll(".distribuidor").forEach(function(item) {
                item.addEventListener("click", function() {
                    var direccion = this.getAttribute("data-direccion");
                    if (markers[direccion]) {
                        map.setView(markers[direccion].getLatLng(), 15);
                        markers[direccion].openPopup();
                    }
                });
            });

        }, 1000);
    });
</script>
