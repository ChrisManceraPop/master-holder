<!-- Agregar Leaflet desde Shopify Assets -->
<link rel="stylesheet" href="{{ 'leaflet.css' | asset_url }}">
<script src="{{ 'leaflet.js' | asset_url }}" defer></script>

<style>
    /* Contenedor general */
    .contenedor {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
    }

    /* Estilo de la barra de búsqueda y lista */
    .buscador-container {
        width: 30%;
        min-width: 300px;
        max-height: 500px;
        overflow-y: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #fff;
        display: none; /* Ocultar lista por defecto */
    }

    #buscador {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        margin-bottom: 15px;
    }

    /* Lista de distribuidores */
    .lista-distribuidores {
        list-style: none;
        padding: 0;
    }

    .distribuidor-card {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
        display: none; /* Ocultar cada distribuidor al inicio */
    }

    .distribuidor-card img {
        width: 60px;
        border-radius: 5px;
        display: block;
        margin-bottom: 5px;
    }

    .distribuidor-card strong {
        font-size: 16px;
        display: block;
        margin-top: 5px;
    }

    /* Mapa */
    .map-container {
        flex-grow: 1;
        height: 500px;
        border-radius: 8px;
        position: relative;
    }

    #map {
        width: 100%;
        height: 100%;
        border-radius: 8px;
        background: #f3f3f3;
    }

    /* Responsive */
    @media screen and (max-width: 768px) {
        .contenedor {
            flex-direction: column;
        }
        .buscador-container {
            width: 100%;
        }
        .map-container {
            height: 400px;
        }
    }
</style>

<div class="contenedor">
    <!-- Buscador -->
    <div style="width: 30%; min-width: 300px;">
        <input type="text" id="buscador" placeholder="Buscar distribuidores por ciudad..." onkeyup="filtrarDistribuidores()">
        <div id="buscador-container" class="buscador-container">
            <ul id="lista-distribuidores" class="lista-distribuidores">
                <!-- Distribuidores filtrados aparecerán aquí -->
            </ul>
        </div>
    </div>

    <!-- Mapa -->
    <div class="map-container">
        <div id="map"></div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() { 
            if (typeof L === 'undefined') {
                console.error("Leaflet.js no se ha cargado correctamente.");
                return;
            }

            // Inicializar el mapa centrado en México
            var map = L.map('map').setView([19.4326, -99.1332], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            console.log("Mapa inicializado correctamente");

            // Cargar distribuidores desde Shopify
            var distribuidores = {{ shop.metaobjects.distribuidor.values | default: "[]" | json }};
            var markers = [];
            var listaDistribuidores = document.getElementById("lista-distribuidores");
            var buscadorContainer = document.getElementById("buscador-container");

            function filtrarDistribuidores() {
                var filtro = document.getElementById("buscador").value.toLowerCase();
                listaDistribuidores.innerHTML = ""; // Limpiar la lista antes de mostrar resultados

                // Limpiar marcadores antes de agregar nuevos
                markers.forEach(marker => map.removeLayer(marker));
                markers = [];

                var resultados = distribuidores.filter(d => d.ciudad.toLowerCase().includes(filtro));

                console.log("Resultados encontrados:", resultados);

                if (resultados.length === 0 || filtro === "") {
                    buscadorContainer.style.display = "none"; // Ocultar lista si no hay resultados
                    return;
                }

                buscadorContainer.style.display = "block"; // Mostrar la lista si hay resultados

                resultados.forEach(function(d) {
                    var listItem = document.createElement("li");
                    listItem.className = "distribuidor-card";
                    listItem.innerHTML = `
                        <img src="${d.logo ? d.logo : ''}" alt="${d.nombre}">
                        <strong>${d.nombre}</strong>
                        <span><b>Ciudad:</b> ${d.ciudad}</span>
                        <span><b>Dirección:</b> ${d.direccion}</span>
                        <span><b>Teléfono:</b> ${d.telefono}</span>
                        <span><b>Horario:</b> ${d.horario}</span>
                    `;
                    listItem.addEventListener("click", function() {
                        map.setView([d.latitud || 19.4326, d.longitud || -99.1332], 14);
                    });

                    listaDistribuidores.appendChild(listItem);
                    listItem.style.display = "block";

                    // Agregar marcador en el mapa
                    var marker = L.marker([d.latitud || 19.4326, d.longitud || -99.1332]).addTo(map)
                        .bindPopup(`
                            <div style='text-align: center;'>
                                <img src="${d.logo}" width="60" style="border-radius:5px;"><br>
                                <strong>${d.nombre}</strong><br>
                                ${d.ciudad}<br>
                                <b>Dirección:</b> ${d.direccion}<br>
                                <b>Teléfono:</b> ${d.telefono}<br>
                                <b>Horario:</b> ${d.horario}
                            </div>
                        `);
                    markers.push(marker);
                });

                // Ajustar zoom si hay resultados
                var group = new L.featureGroup(markers);
                map.fitBounds(group.getBounds(), { padding: [50, 50] });
            }

        }, 1000);
    });
</script>
