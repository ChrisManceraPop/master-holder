<!-- Agregar Leaflet desde Shopify Assets -->
<link rel="stylesheet" href="{{ 'leaflet.css' | asset_url }}">
<script src="{{ 'leaflet.js' | asset_url }}" defer></script>

<style>
    /* Contenedor general */
    .contenedor {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
    }

    /* Buscador y lista */
    .buscador-container {
        width: 30%;
        min-width: 300px;
        max-height: 500px;
        overflow-y: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #fff;
    }

    #buscador {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        margin-bottom: 15px;
    }

    /* Lista de distribuidores */
    .lista-distribuidores {
        list-style: none;
        padding: 0;
    }

    .distribuidor {
        display: none;
        padding: 15px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
    }

    .distribuidor img {
        width: 80px;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .distribuidor strong {
        display: block;
        font-size: 18px;
        margin-top: 5px;
    }

    .distribuidor span {
        display: block;
        font-size: 14px;
        color: #666;
    }

    /* Mapa */
    .map-container {
        flex-grow: 1;
        height: 500px;
        border-radius: 8px;
        position: relative;
    }

    #map {
        width: 100%;
        height: 100%;
        border-radius: 8px;
        background: #f3f3f3;
    }

    /* Responsive */
    @media screen and (max-width: 768px) {
        .contenedor {
            flex-direction: column;
        }
        .buscador-container {
            width: 100%;
        }
        .map-container {
            height: 400px;
        }
    }
</style>

<div class="contenedor">
    <!-- Buscador y lista de distribuidores -->
    <div class="buscador-container">
        <input type="text" id="buscador" placeholder="Buscar distribuidores por ciudad..." onkeyup="filtrarDistribuidores()">
        <ul id="lista-distribuidores" class="lista-distribuidores">
            {% assign distribuidores = shop.metaobjects.distribuidor.values %}
            {% for distribuidor in distribuidores %}
                {% assign ciudad = distribuidor.ciudad | downcase %}
                <li class="distribuidor" 
                    data-ciudad="{{ ciudad }}" 
                    data-direccion="{{ distribuidor.direccion }}"
                    data-nombre="{{ distribuidor.nombre }}"
                    data-telefono="{{ distribuidor.telefono }}"
                    data-horario="{{ distribuidor.horario }}"
                    data-logo="{{ distribuidor.logo | image_url }}">
                    <img src="{{ distribuidor.logo | image_url }}" alt="{{ distribuidor.nombre }}"><br>
                    <strong>{{ distribuidor.nombre }}</strong>
                    <span><b>Ciudad:</b> {{ distribuidor.ciudad }}</span>
                    <span><b>Dirección:</b> {{ distribuidor.direccion }}</span>
                    <span><b>Teléfono:</b> {{ distribuidor.telefono }}</span>
                    <span><b>Horario:</b> {{ distribuidor.horario }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>

    <!-- Mapa -->
    <div class="map-container">
        <div id="map"></div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() { 
            if (typeof L === 'undefined') {
                console.error("Leaflet.js no se ha cargado correctamente.");
                return;
            }

            // Inicializar el mapa centrado en México
            var map = L.map('map').setView([19.4326, -99.1332], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            console.log("Mapa inicializado correctamente");

            var markers = [];
            var listaDistribuidores = document.getElementById("lista-distribuidores");
            var items = document.getElementsByClassName("distribuidor");

            function filtrarDistribuidores() {
                var filtro = document.getElementById("buscador").value.toLowerCase();
                console.log("Buscando:", filtro);

                markers.forEach(marker => map.removeLayer(marker));
                markers = [];

                var hayResultados = false;

                for (var i = 0; i < items.length; i++) {
                    var ciudad = items[i].getAttribute("data-ciudad");
                    var direccion = items[i].getAttribute("data-direccion");

                    if (ciudad.includes(filtro) && filtro !== "") {
                        items[i].style.display = "block";
                        hayResultados = true;

                        // Obtener coordenadas desde OpenStreetMap
                        fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(direccion)}`)
                            .then(response => response.json())
                            .then(data => {
                                if (data.length > 0) {
                                    var lat = parseFloat(data[0].lat);
                                    var lng = parseFloat(data[0].lon);

                                    var marker = L.marker([lat, lng]).addTo(map)
                                        .bindPopup(`
                                            <div style='text-align: center;'>
                                                <img src="${items[i].getAttribute("data-logo")}" width="60" style="border-radius:5px;"><br>
                                                <strong>${items[i].getAttribute("data-nombre")}</strong><br>
                                                <b>Ciudad:</b> ${ciudad}<br>
                                                <b>Dirección:</b> ${direccion}<br>
                                                <b>Teléfono:</b> ${items[i].getAttribute("data-telefono")}<br>
                                                <b>Horario:</b> ${items[i].getAttribute("data-horario")}
                                            </div>
                                        `);
                                    markers.push(marker);

                                    if (hayResultados) {
                                        var group = new L.featureGroup(markers);
                                        map.fitBounds(group.getBounds(), { padding: [50, 50] });
                                    }
                                }
                            });
                    } else {
                        items[i].style.display = "none";
                    }
                }
            }
        }, 1000);
    });
</script>
