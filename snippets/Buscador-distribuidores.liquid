<!-- Agregar Leaflet desde Shopify Assets -->
<link rel="stylesheet" href="{{ 'leaflet.css' | asset_url }}">
<script src="{{ 'leaflet.js' | asset_url }}" defer></script>

<style>
    /* Contenedor general */
    .contenedor {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
    }

    /* Estilo del buscador y lista */
    .buscador-container {
        width: 30%;
        min-width: 300px;
        max-height: 500px;
        overflow-y: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #fff;
    }

    #buscador {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        margin-bottom: 15px;
    }

    /* Lista de distribuidores */
    .lista-distribuidores {
        list-style: none;
        padding: 0;
    }

    .distribuidor {
        display: none; /* Ocultar distribuidores al inicio */
        padding: 15px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
    }

    .distribuidor img {
        width: 80px;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .distribuidor strong {
        display: block;
        font-size: 18px;
        margin-top: 5px;
    }

    .distribuidor span {
        display: block;
        font-size: 14px;
        color: #666;
    }

    /* Mapa */
    .map-container {
        flex-grow: 1;
        height: 500px;
        border-radius: 8px;
        position: relative;
    }

    #map {
        width: 100%;
        height: 100%;
        border-radius: 8px;
        background: #f3f3f3;
    }

    /* Responsive */
    @media screen and (max-width: 768px) {
        .contenedor {
            flex-direction: column;
        }
        .buscador-container {
            width: 100%;
        }
        .map-container {
            height: 400px;
        }
    }
</style>

<div class="contenedor">
    <!-- Buscador y lista de distribuidores -->
    <div class="buscador-container">
        <input type="text" id="buscador" placeholder="Buscar distribuidores por ciudad..." onkeyup="filtrarDistribuidores()">
        <ul id="lista-distribuidores" class="lista-distribuidores">
            {% for distribuidor in shop.metaobjects.distribuidor.values %}
                {% assign ciudad = distribuidor.ciudad | downcase %}
                <li class="distribuidor" data-ciudad="{{ ciudad }}" data-lat="{{ distribuidor.latitud | default: 19.4326 }}" data-lng="{{ distribuidor.longitud | default: -99.1332 }}">
                    <img src="{{ distribuidor.logo | image_url }}" alt="{{ distribuidor.nombre }}"><br>
                    <strong>{{ distribuidor.nombre }}</strong>
                    <span><b>Ciudad:</b> {{ distribuidor.ciudad }}</span>
                    <span><b>Dirección:</b> {{ distribuidor.direccion }}</span>
                    <span><b>Teléfono:</b> {{ distribuidor.telefono }}</span>
                    <span><b>Horario:</b> {{ distribuidor.horario }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>

    <!-- Mapa -->
    <div class="map-container">
        <div id="map"></div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() { 
            if (typeof L === 'undefined') {
                console.error("Leaflet.js no se ha cargado correctamente.");
                return;
            }

            // Inicializar el mapa centrado en México
            var map = L.map('map').setView([19.4326, -99.1332], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            console.log("Mapa inicializado correctamente");

            var markers = [];
            var listaDistribuidores = document.getElementById("lista-distribuidores");
            var items = document.getElementsByClassName("distribuidor");

            function filtrarDistribuidores() {
                var filtro = document.getElementById("buscador").value.toLowerCase();

                // Limpiar marcadores antes de agregar nuevos
                markers.forEach(marker => map.removeLayer(marker));
                markers = [];

                var hayResultados = false;

                for (var i = 0; i < items.length; i++) {
                    var ciudad = items[i].getAttribute("data-ciudad");
                    var lat = parseFloat(items[i].getAttribute("data-lat"));
                    var lng = parseFloat(items[i].getAttribute("data-lng"));

                    if (ciudad.includes(filtro) && filtro !== "") {
                        items[i].style.display = "block";
                        hayResultados = true;

                        // Agregar marcador en el mapa
                        var marker = L.marker([lat, lng]).addTo(map)
                            .bindPopup(`
                                <div style='text-align: center;'>
                                    <img src="${items[i].querySelector("img").src}" width="60" style="border-radius:5px;"><br>
                                    <strong>${items[i].querySelector("strong").textContent}</strong><br>
                                    ${items[i].querySelector("span:nth-child(3)").textContent}<br>
                                    <b>Dirección:</b> ${items[i].querySelector("span:nth-child(4)").textContent}<br>
                                    <b>Teléfono:</b> ${items[i].querySelector("span:nth-child(5)").textContent}<br>
                                    <b>Horario:</b> ${items[i].querySelector("span:nth-child(6)").textContent}
                                </div>
                            `);
                        markers.push(marker);
                    } else {
                        items[i].style.display = "none";
                    }
                }

                // Ajustar zoom si hay resultados
                if (hayResultados) {
                    var group = new L.featureGroup(markers);
                    map.fitBounds(group.getBounds(), { padding: [50, 50] });
                } else {
                    map.setView([19.4326, -99.1332], 6); // Resetear vista si no hay resultados
                }
            }
        }, 1000);
    });
</script>
