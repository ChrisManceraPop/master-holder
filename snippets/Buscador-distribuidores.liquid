<style>
    /* Centrar el buscador */
    .contenedor-buscador {
        text-align: center;
        margin-top: 50px;
    }

    #buscador {
        width: 50%;
        padding: 10px;
        font-size: 16px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
    }

    /* Contenedor de distribuidores en columnas */
    .resultados {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 0;
        margin-top: 20px;
        list-style: none;
    }

    .distribuidor {
        display: none; /* Ocultar distribuidores al inicio */
        width: 45%; /* Dos columnas en pantallas grandes */
        max-width: 400px;
        padding: 15px;
        border: 1px solid #eee;
        border-radius: 8px;
        text-align: center;
        background-color: #f9f9f9;
    }

    .distribuidor img {
        width: 80px;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .distribuidor strong {
        display: block;
        font-size: 18px;
        margin-top: 5px;
    }

    .distribuidor span {
        display: block;
        font-size: 14px;
        color: #666;
    }

    /* Diseño adaptable a móviles (1 columna en pantallas pequeñas) */
    @media screen and (max-width: 768px) {
        .distribuidor {
            width: 90%; /* Solo una columna en móviles */
        }
    }
</style>

<div class="contenedor-buscador">
    <input type="text" id="buscador" placeholder="Buscar distribuidores por ciudad..." onkeyup="filtrarDistribuidores()">
</div>

<ul id="lista-distribuidores" class="resultados">
    {% for distribuidor in shop.metaobjects.distribuidor.values %}
        {% assign ciudad = distribuidor.ciudad | downcase %}
        <li class="distribuidor" data-ciudad="{{ ciudad }}">
            <img src="{{ distribuidor.logo | image_url }}" alt="{{ distribuidor.nombre }}"><br>
            <strong>{{ distribuidor.nombre }}</strong>
            <span><b>Ciudad:</b> {{ distribuidor.ciudad }}</span>
            <span><b>Dirección:</b> {{ distribuidor.direccion }}</span>
            <span><b>Teléfono:</b> {{ distribuidor.telefono }}</span>
            <span><b>Horario:</b> {{ distribuidor.horario }}</span>
        </li>
    {% endfor %}
</ul>

<script>
    function filtrarDistribuidores() {
        var input = document.getElementById("buscador");
        var filtro = input.value.toLowerCase();
        var items = document.getElementsByClassName("distribuidor");

        for (var i = 0; i < items.length; i++) {
            var ciudad = items[i].getAttribute("data-ciudad");
            items[i].style.display = (ciudad.includes(filtro) && filtro !== "") ? "block" : "none";
        }
    }
</script>
