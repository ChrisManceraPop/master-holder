<!-- Agregar Leaflet desde Shopify Assets -->
<link rel="stylesheet" href="{{ 'leaflet.css' | asset_url }}">
<script src="{{ 'leaflet.js' | asset_url }}" defer></script>

<style>
    /* Contenedor general */
    .contenedor {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
    }

    /* Buscador y lista */
    .buscador-container {
        width: 30%;
        min-width: 300px;
        max-height: 500px;
        overflow-y: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #fff;
    }

    #buscador {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        margin-bottom: 15px;
    }

    /* Lista de distribuidores */
    .lista-distribuidores {
        list-style: none;
        padding: 0;
        margin: 0;
        display: none;
    }

    .distribuidor {
        display: flex;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
        transition: background 0.2s;
        background: #fff;
        border-radius: 5px;
        margin-bottom: 5px;
    }

    .distribuidor:hover {
        background: #f9f9f9;
    }

    .distribuidor img {
        width: 60px;
        height: 60px;
        border-radius: 5px;
        margin-right: 10px;
    }

    .distribuidor .info {
        flex-grow: 1;
    }

    .distribuidor strong {
        display: block;
        font-size: 16px;
        margin-bottom: 3px;
    }

    .distribuidor span {
        display: block;
        font-size: 14px;
        color: #666;
    }

    /* Mapa */
    .map-container {
        flex-grow: 1;
        height: 500px;
        border-radius: 8px;
        position: relative;
    }

    #map {
        width: 100%;
        height: 100%;
        border-radius: 8px;
        background: #f3f3f3;
    }

    /* Mensaje de no resultados */
    .no-resultados {
        text-align: center;
        font-size: 16px;
        color: #666;
        padding: 20px;
        display: none;
    }

    /* Responsive */
    @media screen and (max-width: 768px) {
        .contenedor {
            flex-direction: column;
        }
        .buscador-container {
            width: 100%;
        }
        .map-container {
            height: 400px;
        }
    }
</style>

<div class="contenedor">
    <!-- Buscador y lista de distribuidores -->
    <div class="buscador-container">
        <input type="text" id="buscador" placeholder="Buscar distribuidores por ciudad...">
        <ul id="lista-distribuidores" class="lista-distribuidores"></ul>
        <p id="no-resultados" class="no-resultados">No hay distribuidores disponibles.</p>
    </div>

    <!-- Mapa -->
    <div class="map-container">
        <div id="map"></div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() { 
            if (typeof L === 'undefined') {
                console.error("Leaflet.js no se ha cargado correctamente.");
                return;
            }

            var map = L.map('map').setView([19.4326, -99.1332], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            console.log("Mapa inicializado correctamente");

            var distribuidores = {{ shop.metaobjects.distribuidor.values | json }};
            console.log("Distribuidores cargados:", distribuidores);

            if (!distribuidores || distribuidores.length === 0) {
                console.error("No se encontraron distribuidores en Shopify.");
                return;
            }

            var listaDistribuidores = document.getElementById("lista-distribuidores");
            var noResultados = document.getElementById("no-resultados");
            var currentMarker = null;

            function filtrarDistribuidores() {
                var filtro = document.getElementById("buscador").value.toLowerCase();
                listaDistribuidores.innerHTML = "";
                listaDistribuidores.style.display = "none";

                if (filtro.length < 1) {
                    noResultados.style.display = "none";
                    return;
                }

                var hayResultados = false;

                distribuidores.forEach(function(distribuidor) {
                    var ciudad = distribuidor.ciudad.toLowerCase();
                    if (ciudad.includes(filtro)) {
                        hayResultados = true;
                        listaDistribuidores.style.display = "block";

                        // Convertir URL de la imagen correctamente para Shopify
                        var logoUrl = "{{ distribuidor.logo | image_url }}";

                        var li = document.createElement("li");
                        li.className = "distribuidor";
                        li.setAttribute("data-direccion", distribuidor.direccion);

                        li.innerHTML = `
                            <img src="${logoUrl}" alt="${distribuidor.nombre}">
                            <div class="info">
                                <strong>${distribuidor.nombre}</strong>
                                <span><b>Ciudad:</b> ${distribuidor.ciudad}</span>
                                <span><b>Dirección:</b> ${distribuidor.direccion}</span>
                                <span><b>Teléfono:</b> ${distribuidor.telefono}</span>
                                <span><b>Horario:</b> ${distribuidor.horario}</span>
                            </div>
                        `;

                        li.addEventListener("click", function() {
                            var direccion = distribuidor.direccion;
                            fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(direccion)}`)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.length > 0) {
                                        var lat = parseFloat(data[0].lat);
                                        var lng = parseFloat(data[0].lon);

                                        if (currentMarker) {
                                            map.removeLayer(currentMarker);
                                        }

                                        currentMarker = L.marker([lat, lng]).addTo(map)
                                            .bindPopup(`
                                                <div style='text-align: center;'>
                                                    <img src="${logoUrl}" width="60" style="border-radius:5px;"><br>
                                                    <strong>${distribuidor.nombre}</strong><br>
                                                    <b>Ciudad:</b> ${distribuidor.ciudad}<br>
                                                    <b>Dirección:</b> ${direccion}<br>
                                                    <b>Teléfono:</b> ${distribuidor.telefono}<br>
                                                    <b>Horario:</b> ${distribuidor.horario}
                                                </div>
                                            `).openPopup();

                                        map.setView([lat, lng], 15);
                                    }
                                });
                        });

                        listaDistribuidores.appendChild(li);
                    }
                });

                noResultados.style.display = hayResultados ? "none" : "block";
            }

            document.getElementById("buscador").addEventListener("keyup", filtrarDistribuidores);

        }, 1000);
    });
</script>