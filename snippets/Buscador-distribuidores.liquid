<!-- Agregar Leaflet desde Shopify Assets -->
<link rel="stylesheet" href="{{ 'leaflet.css' | asset_url }}">
<script src="{{ 'leaflet.js' | asset_url }}" defer></script>

<style>
    /* Centrar el buscador */
    .contenedor-buscador {
        text-align: center;
        margin-top: 50px;
    }

    #buscador {
        width: 50%;
        padding: 10px;
        font-size: 16px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
    }

    /* Contenedor del mapa */
    .map-container {
        width: 100%;
        height: 500px;
        margin-top: 20px;
        border-radius: 8px;
        position: relative;
    }

    #map {
        width: 100%;
        height: 100%;
        min-height: 500px;
        border-radius: 8px;
        background: #f3f3f3; /* Fondo para ver si el contenedor está cargando */
    }
</style>

<div class="contenedor-buscador">
    <input type="text" id="buscador" placeholder="Buscar distribuidores por ciudad..." onkeyup="filtrarDistribuidores()">
</div>

<div class="map-container">
    <div id="map"></div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(function() { 
            if (typeof L === 'undefined') {
                console.error("Leaflet.js no se ha cargado correctamente.");
                return;
            }

            // Inicializar el mapa centrado en México
            var map = L.map('map').setView([19.4326, -99.1332], 6);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            console.log("Mapa inicializado correctamente");

            // Cargar distribuidores desde Shopify
            var distribuidores = {{ shop.metaobjects.distribuidor.values | json }};
            var markers = [];

            function filtrarDistribuidores() {
                var filtro = document.getElementById("buscador").value.toLowerCase();

                // Eliminar marcadores antes de agregar nuevos
                markers.forEach(marker => map.removeLayer(marker));
                markers = [];

                // Filtrar distribuidores y agregarlos al mapa
                distribuidores.forEach(function(d) {
                    if (d.ciudad.toLowerCase().includes(filtro) && filtro !== "") {
                        var marker = L.marker([d.latitud || 19.4326, d.longitud || -99.1332]).addTo(map)
                            .bindPopup(`
                                <div style='text-align: center;'>
                                    <img src="${d.logo}" width="60" style="border-radius:5px;"><br>
                                    <strong>${d.nombre}</strong><br>
                                    ${d.ciudad}<br>
                                    <b>Dirección:</b> ${d.direccion}<br>
                                    <b>Teléfono:</b> ${d.telefono}<br>
                                    <b>Horario:</b> ${d.horario}
                                </div>
                            `);
                        markers.push(marker);
                    }
                });

                // Ajustar el zoom si hay resultados
                if (markers.length > 0) {
                    var group = new L.featureGroup(markers);
                    map.fitBounds(group.getBounds(), { padding: [50, 50] });
                } else {
                    map.setView([19.4326, -99.1332], 6); // Resetear si no hay resultados
                }
            }

        }, 1000); // Espera 1 segundo para evitar errores de carga en Shopify
    });
</script>
