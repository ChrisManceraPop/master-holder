{% if product.metafields.shopify--discovery--product_recommendation.related_products.value %}
  <span>Variantes Producto</span>
  <ol class="related-products">
    {% assign current_product_handle = product.handle %}
    {% assign related_products = product.metafields.shopify--discovery--product_recommendation.related_products.value %}
    {% assign active_product_found = false %}
    
    <!-- Mostrar primero el producto activo si está en las recomendaciones -->
    {% for recommended_product in related_products %}
  {% if recommended_product.handle == current_product_handle %}
    {% assign active_product_found = true %}
    <li class="product-item-2 active-product">
      <a href="{{ recommended_product.url }}" class="product-link" title="{{ recommended_product.title }}">
        {% assign custom_color = recommended_product.metafields.custom.color_variant %}
        <div class="product-color" style="background:{{ custom_color }}">

        </div>
      </a>
    </li>
  {% endif %}
{% endfor %}




    <!-- Mostrar los otros productos, excluyendo el producto activo -->
    {% for recommended_product in related_products %}
      {% unless recommended_product.handle == current_product_handle %}
        <li class="product-item-2">
          <a href="{{ recommended_product.url }}" class="product-link" title="{{ recommended_product.title }}">
            {% assign custom_color = recommended_product.metafields.custom.color_variant %}
            <div class="product-color" style="background:{{ custom_color }}"></div>
            
          </a>
        </li>
      {% endunless %}
    {% endfor %}
  </ol>
{% endif %}
<style>




.product-link {
  border: 0px !important;
  padding: 0px !important;
}

  
.related-products {
  list-style: none;
  padding: 0;
  margin: 2rem 0 !important;
}

.product-item-2 {
  display: inline-block;
  width: 3rem;
  height: 3rem;
  overflow: hidden;
  border-radius: 50%;
  border: 1px solid gainsboro;
  
  text-align: center;
  vertical-align: top;
}

.product-link {
  display: block;
  text-decoration: none;
  height: 100%;
  position: relative;
}

.product-image {
  width: 100%;
  height: 100%;
  background-size: inherit;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 50%;
}
.product-color {
  width: 50px;
  height: 50px;
  border: 2px ;
  border-radius: 50%;
  display: inline-block;
 
  transition: background-color 0.3s ease;   /* Suaviza la transición del color */
}

  
/* Estilo especial para el producto activo */
.active-product {
  border-color: #ff9900; /* Cambia el color del borde al que desees */
  order: -1; /* Mueve el producto activo al principio */
}

.product-link:hover::after {
  content: attr(title);
  position: absolute;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  padding: 5px;
  border-radius: 5px;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
  z-index: 10;
}
</style>