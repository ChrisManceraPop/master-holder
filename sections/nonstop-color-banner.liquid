<section class="nonstop-banner">
  <div class="nonstop-banner__content" style="background-color: {{ section.settings.bg_color }}">
    <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h2>
    <p style="color: {{ section.settings.text_color }}">{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.button_link }}" class="nonstop-banner__button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}">
      {{ section.settings.button_text }}
    </a>
  </div>
  <div class="nonstop-banner__images">
    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Image" class="nonstop-banner__main-image">
    <img src="{{ section.settings.background_image | img_url: 'master' }}" alt="Background Image" class="nonstop-banner__background-image">
  </div>
</section>

<style>
  .nonstop-banner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 50px;
  }
  .nonstop-banner__content {
    max-width: 40%;
  }
  .nonstop-banner__button {
    display: inline-block;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
  }
  .nonstop-banner__images {
    position: relative;
    max-width: 60%;
  }
  .nonstop-banner__main-image {
    width: 50%;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }
  .nonstop-banner__background-image {
    width: 100%;
  }
</style>

{% schema %}
{
  "name": "Nonstop Color Banner",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "NONSTOP COLOR"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "NEW color-matched caps and lids."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop New Colors"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Nonstop Color Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
