<section class="nonstop-banner">
  <div class="nonstop-banner__container">
    <!-- Sección Izquierda: Texto y Botón -->
    <div class="nonstop-banner__left" style="background-color: {{ section.settings.bg_color }}">
      <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h2>
      <p style="color: {{ section.settings.text_color }}">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.button_link }}" class="nonstop-banner__button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}">
        {{ section.settings.button_text }}
      </a>
    </div>

    <!-- Sección Centro: Imagen Principal -->
    <div class="nonstop-banner__center">
      <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Product" class="nonstop-banner__main-image">
    </div>

    <!-- Sección Derecha: Imagen de Fondo -->
    <div class="nonstop-banner__right">
      <img src="{{ section.settings.background_image | img_url: 'master' }}" alt="Background Image" class="nonstop-banner__background-image">
    </div>
  </div>
</section>

<style>
     
    .nonstop-banner {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50px 0;
    width: 100%;
    position: relative;
  }
  
  .nonstop-banner__container {
    display: grid;
    grid-template-columns: 50% 50%; /* Secciones divididas en 50% */
    max-width: 1500px;
    width: 100%;
    align-items: center;
    position: relative;
    min-height: 100px; /* Reduce la altura del contenedor */
    overflow: hidden; /* Evita que se expanda con la imagen */
  }

  /* Sección Izquierda (Texto y Botón) */
  .nonstop-banner__left {
    background-color: #f0f0f0;
    padding: 40px;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    height: 100%;
  }

  .nonstop-banner__left h2 {
    font-size: 2.4em;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .nonstop-banner__left p {
    font-size: 1.4em;
    margin-bottom: 20px;
  }

  .nonstop-banner__button {
    display: inline-block;
    padding: 14px 26px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    text-align: center;
    border: 2px solid black;
    font-size: 1.2em;
    background: black;
    color: white;
  }

  /* Sección Derecha (Imagen de Fondo) */
  .nonstop-banner__right {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    overflow: hidden;
    aspect-ratio: 16/9; /* Mantiene la proporción de ASOS */
  }

  .nonstop-banner__background-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ajusta la imagen sin distorsión */
    position: absolute;
    top: 0;
    left: 0;
  }

  /* Imagen Central (Flotante sobre ambas secciones) */
  .nonstop-banner__center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -55%); /* Elevar la imagen sobre el banner */
    z-index: 3;
    width: 400px;
    height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: white;
    border-radius: 10px;
    box-shadow: 10px 10px 30px rgba(0, 0, 0, 0.2);
  }

  .nonstop-banner__main-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Responsive para Pantallas Pequeñas */
  @media (max-width: 768px) {
    .nonstop-banner__container {
      grid-template-columns: 1fr;
      text-align: center;
      min-height: 200px;
    }

    .nonstop-banner__left, .nonstop-banner__right {
      width: 100%;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 20px;
    }

    .nonstop-banner__right {
      aspect-ratio: 16/9; /* Mantiene proporción en móviles */
    }

    .nonstop-banner__center {
      width: 200px;
      height: 200px;
      transform: translate(-50%, -40%); /* Ajuste para móviles */
    }

    .nonstop-banner__main-image {
      width: 100%;
      height: 100%;
    }
  }



</style>

