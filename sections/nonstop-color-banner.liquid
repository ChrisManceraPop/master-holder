<section class="nonstop-banner">
  <div class="nonstop-banner__container">
    <!-- Sección Izquierda: Texto y Botón -->
    <div class="nonstop-banner__left" style="background-color: {{ section.settings.bg_color }}">
      <h2 style="color: {{ section.settings.text_color }}">{{ section.settings.title }}</h2>
      <p style="color: {{ section.settings.text_color }}">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.button_link }}" class="nonstop-banner__button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}">
        {{ section.settings.button_text }}
      </a>
    </div>

    <!-- Sección Centro: Imagen Principal -->
    <div class="nonstop-banner__center">
      <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Product" class="nonstop-banner__main-image">
    </div>

    <!-- Sección Derecha: Imagen de Fondo -->
    <div class="nonstop-banner__right">
      <img src="{{ section.settings.background_image | img_url: 'master' }}" alt="Background Image" class="nonstop-banner__background-image">
    </div>
  </div>
</section>

<style>
   .nonstop-banner {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50px 0;
    width: 100%;
  }
  
  .nonstop-banner__container {
    display: grid;
    grid-template-columns: 35% 30% 35%; /* Ajustamos los anchos */
    max-width: 1200px;
    width: 100%;
    align-items: center;
    position: relative;
  }

  /* Estilos de la Sección Izquierda (Texto y Botón) */
  .nonstop-banner__left {
    padding: 40px;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start; /* Alinea mejor el contenido */
  }

  .nonstop-banner__left h2 {
    font-size: 2.4em;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .nonstop-banner__left p {
    font-size: 1.4em;
    margin-bottom: 20px;
  }

  .nonstop-banner__button {
    display: inline-block;
    padding: 14px 26px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    text-align: center;
    border: 2px solid black;
    font-size: 1.2em;
  }

  /* Sección Centro (Imagen Principal) */
  .nonstop-banner__center {
    position: relative; /* Necesario para que la imagen sobresalga */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2; /* Para que esté sobre la imagen de fondo */
  }

  .nonstop-banner__main-image {
    max-width: 300px;
    height: auto;
    object-fit: contain;
    position: absolute;
    left: 50%;
    transform: translate(-50%, 20px); /* Ajustamos posición */
    box-shadow: 10px 10px 30px rgba(0, 0, 0, 0.2); /* Efecto de sombra */
  }

  /* Sección Derecha (Imagen de Fondo) */
  .nonstop-banner__right {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: flex-end; /* Alinea la imagen más a la derecha */
    align-items: center;
  }

  .nonstop-banner__background-image {
    width: 80%; /* Reducimos tamaño */
    object-fit: contain;
  }

  /* Responsive para Pantallas Pequeñas */
  @media (max-width: 768px) {
    .nonstop-banner__container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .nonstop-banner__left, .nonstop-banner__center, .nonstop-banner__right {
      width: 100%;
      justify-content: center;
      align-items: center;
    }

    .nonstop-banner__main-image {
      max-width: 200px;
      transform: translate(-50%, 5px);
    }

    .nonstop-banner__background-image {
      width: 60%;
    }
  }

</style>

{% schema %}
{
  "name": "Nonstop Color Banner",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "NONSTOP COLOR"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "NEW color-matched caps and lids."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop New Colors"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Nonstop Color Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
