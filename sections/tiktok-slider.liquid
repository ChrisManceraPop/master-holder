<div class="t4s-section-inner t4s-container-wrap">
  <div class="t4s-container"> 
    <div class="slider-containerv8 swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="slidev8">
              <div class="with-borderv8">
                {% if block.settings.shopify_video != blank %}
                  <video class="tiktok-videov8 lazy-video" data-src="{{ block.settings.shopify_video }}" preload="none" playsinline muted loop>
                    <source src="{{ block.settings.shopify_video }}" type="video/mp4">
                    Tu navegador no soporta el video.
                  </video>
                  <button class="play-buttonv8">▶</button>
                  <button class="pause-buttonv8 hiddenv8">⏸</button>
                {% else %}
                  <p>No hay video disponible.</p>
                {% endif %}
              </div>

              {% if block.settings.featured_product != blank %}
                <div class="product-boxv8">
                  <a href="{{ block.settings.featured_product.url }}" class="product-linkv8">
                    <img src="{{ block.settings.featured_product.featured_image | img_url: '150x150' }}" alt="{{ block.settings.featured_product.title }}">
                    <div class="product-info">
                      <span class="product-title">{{ block.settings.featured_product.title }}</span>
                      <span class="product-price">
                        {{ block.settings.featured_product.price | money }}
                        {% if block.settings.featured_product.compare_at_price > block.settings.featured_product.price %}
                          <span class="product-old-price">{{ block.settings.featured_product.compare_at_price | money }}</span>
                        {% endif %}
                      </span>
                    </div>
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Botones de navegación -->
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>

      <!-- Paginación -->
      <div class="swiper-pagination"></div>
    </div>
  </div>
</div>

<style>
  .slider-containerv8 {
    position: relative;
    width: 100%;
    margin: auto;
    overflow: hidden;
    padding: 20px 0;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .slidev8 {
    flex: 0 0 100%;
    max-width: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 10px;
  }

  .tiktok-videov8 {
    width: 100%;
    height: auto;
    aspect-ratio: 9 / 16;
    border-radius: 10px;
    display: block;
    background: black;
  }

  .play-buttonv8, .pause-buttonv8 {
    position: absolute;
    width: 50px;
    height: 50px;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
    cursor: pointer;
    z-index: 10;
  }

  .play-buttonv8 {
    display: flex;
    margin-left: 2px;
  }

  .pause-buttonv8 {
    display: none;
    opacity: 1;
    transition: opacity 0.5s ease;
  }

  .pause-buttonv8.hiddenv8 {
    opacity: 0;
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: #000;
  }

  .swiper-pagination-bullet-active {
    background: #000;
  }

  @media (max-width: 767px) {
    .slider-containerv8 {
      padding: 10px;
    }

    .swiper-slide {
      display: flex;
      justify-content: center;
    }

    .slidev8 {
      max-width: 250px;
    }

    .tiktok-videov8 {
      height: 400px;
    }
  }
</style>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    new Swiper(".swiper", {
      slidesPerView: 1,
      spaceBetween: 10,
      loop: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      breakpoints: {
        768: {
          slidesPerView: 2,
          spaceBetween: 10,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 10,
        }
      }
    });

    const videos = document.querySelectorAll(".lazy-video");

    videos.forEach(video => {
        video.addEventListener("click", () => {
            if (video.paused) {
                if (!video.src) {
                    video.src = video.getAttribute("data-src");
                    video.load();
                }
                video.play();
            } else {
                video.pause();
            }
        });
    });

    // Play/Pause botones
    document.querySelectorAll(".play-buttonv8").forEach(button => {
        button.addEventListener("click", function () {
            let video = this.previousElementSibling;
            if (video.paused) {
                if (!video.src) {
                    video.src = video.getAttribute("data-src");
                    video.load();
                }
                video.play();
                this.style.display = "none";
                video.nextElementSibling.style.display = "flex";
            }
        });
    });

    document.querySelectorAll(".pause-buttonv8").forEach(button => {
        button.addEventListener("click", function () {
            let video = this.previousElementSibling;
            video.pause();
            this.style.display = "none";
            video.previousElementSibling.style.display = "flex";
        });
    });
  });
</script>

{% schema %}
{
  "name": "TikTok Swiper Slider",
  "settings": [],
  "blocks": [
    {
      "type": "video",
      "name": "Video de Shopify",
      "settings": [
        {
          "type": "text",
          "id": "shopify_video",
          "label": "URL del video en Shopify",
          "info": "Sube el video a Shopify y copia la URL."
        },
        {
          "type": "product",
          "id": "featured_product",
          "label": "Seleccionar producto"
        }
      ]
    }
  ],
  "max_blocks": 7,
  "presets": [
    {
      "name": "TikTok Swiper Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
